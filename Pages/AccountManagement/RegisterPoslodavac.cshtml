@page
@model JobSeeker.Pages.AccountManagement.RegisterPoslodavacModel
@{
}
<div class="container register-container col-md-6" style="margin-bottom:10%;">
    <div class="row">
        <div class="col-md-12 register-form ">
            <form method="post" class="pb-0">
                <h4>Napravite novi račun</h4>
                <hr />
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Naziv kompanije" value="" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Opis kompanije" value="" />
                </div>
                <div class="form-group">
                    <input type="date" class="form-control" placeholder="Datum osnivanja kompanije" value="" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Djelatnost" value="" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Vaš email" value="" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Broj telefona" value="" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Korisničko ime" value="" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Vaša lozinka" value="" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Potvrdite vašu lozinku" value="" />
                </div>
                <div class="form-group text-center">
                    <input type="submit" class="btnSubmit" value="Kreiraj račun" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}